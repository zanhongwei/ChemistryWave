<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhw.chemistrywave.view.CircleImageView
            android:id="@+id/civ_itemlvcyjbz_headimage"
            android:layout_marginLeft="30px"
            android:src="@drawable/headimage_mycenter"
            app:layout_auto_baseheight="width"
            android:layout_width="77px"
            android:layout_height="77px" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="16px"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_itemlvcyjbz_usernametop"
                android:text="用户名称"
                android:textSize="14sp"
                android:textColor="@color/a66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_itemlvcyjbz_usernamebottom"
                android:layout_marginTop="5px"
                android:text="用户名称"
                android:textSize="12sp"
                android:textColor="@color/a5f4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="5px"
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>