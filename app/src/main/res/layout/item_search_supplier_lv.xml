<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30px"
        android:paddingBottom="30px">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40px"
            android:paddingRight="30px">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_shop_logo"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_marginRight="30px"/>

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="公司名称"
                android:textColor="#040000"
                android:textSize="28px"
                android:layout_toRightOf="@+id/civ_shop_logo"/>

            <TextView
                android:id="@+id/tv_shop_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dengji"
                android:layout_alignLeft="@id/tv_shop_name"
                android:layout_below="@+id/tv_shop_name"
                android:layout_marginTop="25px"
                android:text="4级"
                android:gravity="center"
                android:textSize="20px"/>

            <TextView
                android:id="@+id/tv_sale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_shop_grade"
                android:layout_toRightOf="@+id/tv_shop_grade"
                android:layout_marginLeft="32px"
                android:text="Total sales：5656565"
                android:textSize="20px"/>

            <TextView
                android:id="@+id/tv_goto_shop"
                android:layout_width="93px"
                android:layout_height="47px"
                android:text="Enter"
                android:textSize="26px"
                android:textColor="#0791e6"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_tv_jindian"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:paddingLeft="40px"
            android:paddingRight="40px">
            <ImageView
                android:id="@+id/iv_shop_img1"
                android:layout_width="210px"
                android:layout_height="210px"
                />
            <View
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_shop_img2"
                android:layout_width="210px"
                android:layout_height="210px" />
            <View
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_shop_img3"
                android:layout_width="210px"
                android:layout_height="210px" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>