<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="@drawable/shape_bg_wuliu"
    android:layout_width="330dp"
    android:layout_height="140dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="#b3212329"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:layout_marginLeft="17dp"
            android:layout_weight="1"
            android:text="物流详情"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_itempopwuliu_close"
            android:paddingLeft="10dp"
            android:paddingRight="19dp"
           android:gravity="center"
            android:text="关闭"
            android:textSize="13sp"
            android:textColor="#66ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="物流公司："
            android:textColor="@color/a99"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
           android:id="@+id/tv_itempopwuliu_gs"
            android:text="德邦物流"
            android:textColor="@color/t333"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="快递单号："
            android:textColor="@color/a99"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_itempopwuliu_danhao"
            android:text="12364489"
            android:textColor="@color/t333"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>