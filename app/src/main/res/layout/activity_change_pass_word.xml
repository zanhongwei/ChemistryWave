<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right"
            android:text="原密码："
            android:textColor="@color/a33"
            android:textSize="28px" />

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginRight="23px"
            android:layout_weight="0.6"
            android:background="@drawable/bg_et_myinfomation_detail"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:paddingLeft="10px"
            android:textColor="@color/a33"
            android:textColorHint="@color/c6c6c6"
            android:textSize="28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right"
            android:text="新密码："
            android:textColor="@color/a33"
            android:textSize="28px" />

        <EditText
            android:id="@+id/et_verify"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginRight="23px"
            android:layout_weight="0.6"
            android:background="@drawable/bg_et_myinfomation_detail"
            android:hint="请输入新密码"
            android:paddingLeft="10px"
            android:textColor="@color/a33"
            android:textColorHint="@color/c6c6c6"
            android:textSize="28px"
            android:maxLength="20"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right"
            android:text="确认密码："
            android:textColor="@color/a33"
            android:textSize="28px" />

        <EditText
            android:id="@+id/et_verifys"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginRight="23px"
            android:layout_weight="0.6"
            android:background="@drawable/bg_et_myinfomation_detail"
            android:hint="请再次确认新密码"
            android:paddingLeft="10px"
            android:textColor="@color/a33"
            android:textColorHint="@color/c6c6c6"
            android:textSize="28px"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="right"
            android:text="确认密码："
            android:textColor="@color/a33"
            android:textSize="24px"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="23px"
            android:layout_weight="0.6"
            android:paddingLeft="10px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码长度为6-20位，不支持空格"
                android:textSize="24px" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_change"
        android:layout_width="302px"
        android:layout_height="72px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="124px"
        android:background="@drawable/tv_save_info"
        android:text="确认修改"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28px"/>

</LinearLayout>
