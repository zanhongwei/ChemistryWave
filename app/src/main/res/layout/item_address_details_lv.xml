<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="35px"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="30px"
            android:textColor="@color/a32"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/a32"
            android:textSize="28px"
            android:layout_marginLeft="20px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地址详情"
        android:layout_marginTop="20px"
        android:textColor="@color/a8c"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/d9"
        android:layout_marginTop="30px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address_moren_selected"
            android:layout_marginRight="10px"/>
        <TextView
            android:id="@+id/tv_moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default address"
            android:textColor="@color/a7a7a7"
            android:textSize="24px"/>

        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address_edit"/>
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginLeft="10px"
            android:textColor="@color/a7a7a7"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address_delete"
            android:layout_marginLeft="52px"
            android:layout_marginRight="10px"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delect"
            android:textColor="@color/a7a7a7"
            android:textSize="24px"/>

    </LinearLayout>

</LinearLayout>