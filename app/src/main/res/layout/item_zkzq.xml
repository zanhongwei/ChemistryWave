<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="2px"
        android:background="@drawable/shape_biank_zkzq"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout

    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="216px">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_itemhomezkzq_logo"
        android:layout_centerInParent="true"
        android:src="@drawable/goodsone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_bbb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout

                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv_itemhomezkzq_goodsname"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:layout_weight="1"
                    android:text="6-双(三氟甲基)\n苯甲酸"
                    android:textColor="@color/t333"
                    android:textSize="22px" />


            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">


                <TextView
                    android:text="规格："
                    android:textSize="18px"
                    android:textColor="@color/a66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:id="@+id/iv_itemlvzkzq_guige"
                    android:text="100kg/瓶"
                    android:textSize="18px"
                    android:textColor="@color/t333"
                    android:layout_width="90px"
                    android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content">
                <TextView

                    android:layout_marginLeft="10px"
                    android:text="纯度："
                    android:textSize="18px"
                    android:textColor="@color/a66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/iv_itemlvzkzq_chundu"
                    android:text="99%"
                    android:textSize="18px"
                    android:textColor="@color/t333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18px"
                    android:textColor="@color/fa4b4b"
                    android:text="商城价："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_itemhomezkzq_scj"
                    android:textSize="20px"
                    android:textColor="@color/fa4b4b"
                    android:text="¥5200/桶"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="8px"
                android:layout_marginBottom="14px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18px"
                    android:textColor="#969696"
                    android:text="市场价："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_itemhomezkzq_shicj"
                    android:textSize="18px"
                    android:textColor="#969696"
                    android:text="¥5200/桶"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginTop="209px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/youhui" />
</RelativeLayout>