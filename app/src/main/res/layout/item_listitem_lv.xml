<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40px"
        android:paddingBottom="40px">

        <CheckBox
            android:id="@+id/iv_select"
            style="@style/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25px" />

        <ImageView
            android:id="@+id/iv_imag"
            android:layout_width="190px"
            android:layout_height="190px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26px"
            android:scaleType="fitXY"
            android:src="@drawable/shopcarhuowu"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="21px"
            android:layout_marginLeft="30px">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="邻羟基苯甲醛邻羟基苯甲醛邻羟基苯甲醛邻羟基苯甲醛邻羟基苯甲醛"
                android:textColor="@color/a1a1a1a"
                android:textSize="24px" />


            <TextView
                android:id="@+id/tv_parameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected：“”“”“”"
                android:layout_below="@+id/tv_name"
                android:textColor="@color/a99"
                android:textSize="24px"
                android:layout_marginTop="10px"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="￥3000.00/桶"
                android:textColor="@color/ef2f2e"
                android:textSize="26px"/>
            <LinearLayout
                android:id="@+id/ll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10px"
                android:layout_marginBottom="10px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textColor="@color/ef2f2e"
                    android:textSize="26px"
                    />
                <TextView
                    android:id="@+id/tv_editnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/ef2f2e"
                    android:textSize="26px"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_edit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_sub"
                    android:layout_width="54px"
                    android:layout_height="44px"
                    android:background="@drawable/shop_car_text_bg"
                    android:textSize="28px"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/black"

                    />
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="54px"
                    android:layout_height="44px"
                    android:background="@color/white"
                    android:textSize="24px"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="54px"
                    android:layout_height="44px"
                    android:background="@drawable/shop_car_text_bg"
                    android:textSize="28px"
                    android:text="+"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </RelativeLayout>

