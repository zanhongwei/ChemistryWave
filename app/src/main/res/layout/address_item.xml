<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginRight="50px"
        android:layout_marginTop="32px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemaddress_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户姓名"
            android:textColor="@color/a32"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/tv_itemaddress_userphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13782018785"
            android:textColor="@color/a32"
            android:textSize="28px"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_itemaddress_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginRight="50px"
        android:layout_marginTop="35px"
        android:lineSpacingExtra="10px"
        android:text="天津市和平区全境天津市和平区全境天津市和平区全境天津市和平区全境"
        android:textColor="@color/a32"
        android:textSize="28px"/>

    <View
        android:layout_width="720px"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="@color/dd"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginRight="50px"
        android:orientation="horizontal"
        android:padding="20px">

        <RadioButton
            android:id="@+id/rb_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/select_cancle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="Default address"
            android:textColor="@color/a1582cf"
            android:textSize="26px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_itemaddress_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/address_edit"
                android:drawablePadding="10px"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/a32"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_itemaddress_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:drawableLeft="@drawable/address_delete"
                android:drawablePadding="10px"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/a32"
                android:textSize="26px"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>