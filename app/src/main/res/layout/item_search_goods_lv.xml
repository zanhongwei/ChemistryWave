<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30px"
        android:paddingBottom="30px">

        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="280px"
            android:layout_height="280px"
            android:layout_marginLeft="10px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="goods name"
                android:textColor="@color/t333"
                android:textSize="30px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    android:textColor="@color/ef2f2e"
                    android:textSize="26px"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12121"
                    android:textColor="@color/ef2f2e"
                    android:textSize="34px"/>

                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="156px"
                    android:layout_height="56px"
                    android:background="@drawable/bg_btn_buy_now"
                    android:text="Buy"
                    android:textColor="@color/white"
                    android:textSize="28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称"
                    android:textColor="@color/t999"
                    android:textSize="24px"/>
                
                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_goto_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter the shop"
                    android:textColor="@color/t999"
                    android:textSize="24px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>