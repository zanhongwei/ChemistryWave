<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
<LinearLayout
    android:layout_marginBottom="15px"
    android:layout_marginTop="35px"
    android:layout_marginLeft="40px"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_itemfragment_msgtype"
        android:textSize="26px"
        android:textColor="#399bff"
        android:text="实单竞价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="26px"
        android:textColor="@color/a9c"
        android:text="结果通知消息:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:background="@color/f0"
        android:layout_width="704px"
        android:layout_height="1px" />
    <TextView
        android:id="@+id/tv_itemfragment_msgcontent"
        android:layout_marginTop="10px"
        android:layout_marginLeft="40px"
        android:textSize="26px"
        android:textColor="@color/a32"
        android:text="您好！恭喜您的“2-溴-4,6-二硝基苯胺”竞价产品已经竞价成功!"
        android:layout_width="475px"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="25px"
        android:gravity="center_vertical"
        android:layout_marginRight="42px"
        android:layout_marginTop="25px"
        android:layout_marginLeft="40px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_itemfragment_msgdate"
            android:layout_weight="1"
            android:textSize="24px"
            android:textColor="@color/a9c"
            android:text="2017-11-04   13:54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_itemfragment_msgdetail"
            android:textSize="22px"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/detail_blue"
            android:text="查看详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
