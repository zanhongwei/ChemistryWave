<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_itemsysmsg_title"
    android:layout_marginTop="20px"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:textColor="@color/a9c"
    android:textSize="28px"
    android:text="系统群发消息"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_itemsysmsg_content"
        android:layout_marginTop="10px"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:lineSpacingExtra="6px"
        android:text="欢迎加入化浪染料官网，欢迎加入化浪染料官网，欢迎加入化浪染料官网。"
        android:textColor="@color/a32"
        android:textSize="28px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_itemsysmsg_date"
        android:layout_marginBottom="10px"
        android:layout_marginTop="24px"
        android:layout_marginRight="30px"
        android:layout_gravity="right"
        android:textColor="@color/a9c"
        android:textSize="22px"
        android:text="2017-11-04   13:54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>