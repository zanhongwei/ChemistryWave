<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f2"
    tools:context="com.axehome.chemistrywaves.activitys.ApplyForAfterSaleActivity">
<include
    android:id="@+id/include_aftersale"
    layout="@layout/titlebar"/>
    <LinearLayout
        android:layout_below="@id/include_aftersale"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   
    <LinearLayout
        android:paddingLeft="16px"
        android:paddingRight="38px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="184px">
        <RelativeLayout
            android:background="@drawable/biankuang"
            app:layout_auto_baseheight="width"
            android:layout_width="120px"
            android:layout_height="120px">
            <ImageView
                android:id="@+id/iv_applyforaftersale_goods"
                android:layout_centerInParent="true"
                android:src="@drawable/goods_wbk"
                app:layout_auto_baseheight="width"
                android:layout_width="114px"
                android:layout_height="114px" />
        </RelativeLayout>
<LinearLayout
    android:layout_marginLeft="20px"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_applyforaftersale_goodsname"
        android:lineSpacingExtra="6px"
        android:textSize="24px"
        android:textColor="@color/a1a1a1a"
        android:text="4-十二烷氧基苯甲酸十二烷氧基苯甲酸4-十二烷氧基苯甲酸十二烷氧基苯甲"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_applyforaftersale_goodscontent"
        android:textSize="24px"
        android:textColor="@color/a99"
        android:layout_marginTop="20px"
        android:text="已选：“90%”“红色”“贴体包装”"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30px"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="退款金额："
            android:textSize="30px"
            android:textColor="@color/t333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_applyforaftersale_tuikuangjine"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥50000.00"
            android:textColor="#ef2b2c"
            android:textSize="30px" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_applyforaftersale_tuikuangyuanyin"
        android:paddingRight="30px"
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="退款原因"
            android:textSize="30px"
            android:textColor="@color/t333"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/arrow_right"
            android:text="¥50000.00"
            android:textSize="30px"
            android:textColor="#ef2b2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="1px"
        android:paddingRight="30px"
        android:paddingLeft="30px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16px"
            android:text="问题描述"
            android:textSize="30px"
            android:textColor="@color/t333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
<EditText
    android:id="@+id/et_applyforaftersale_wentimiaoshu"
    android:paddingLeft="20px"
    android:paddingTop="20px"
    android:gravity="top"
    android:textSize="26px"
    android:textColorHint="@color/b3"
    android:hint="请在此处描述您的问题"
    android:layout_marginTop="17px"
    android:background="@drawable/wentimiaoshu"
    android:layout_width="689px"
    android:layout_height="243px" />
        <TextView
            android:layout_marginTop="34px"
            android:textColor="@color/a66"
            android:textSize="26px"
            android:text="上传图片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_applyforaftersale_addimage"
            app:layout_auto_baseheight="width"
            android:scaleType="fitXY"
            android:layout_marginBottom="63px"
            android:layout_marginTop="29px"
            android:src="@drawable/shangchuantupian"
            android:layout_width="120px"
            android:layout_height="120px" />
    </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_applyforaftersale_commit"
        android:textSize="34px"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="#03a4f4"
        android:layout_width="match_parent"
        android:layout_height="100px" />
</RelativeLayout>
