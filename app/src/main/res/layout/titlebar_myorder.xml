<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bj_titlebar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130px">
<RelativeLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="90px">
    <RelativeLayout
        android:id="@+id/rl_titlebarmyorder_back"
        android:paddingLeft="40px"
        android:layout_width="90px"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<ImageView
    android:id="@+id/iv_titlebarmyorder_line"
    android:layout_marginLeft="90px"
    android:layout_centerVertical="true"
    android:src="@drawable/line_white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_titlebarmyorder_center"
    android:layout_centerInParent="true"
    android:text="My Order"
    android:textSize="18sp"
    android:textColor="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_titlebarmyorder_right"
        android:layout_marginRight="22px"
        android:drawablePadding="10px"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/sj_down"
        android:layout_centerVertical="true"
        android:text="筛选"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
</RelativeLayout>