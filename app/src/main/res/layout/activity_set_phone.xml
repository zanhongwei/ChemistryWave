<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhw.chemistrywave.activity.ChangeNickNameActivity">

    <include layout="@layout/titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="Please fill in the new phone"
            android:textColor="@color/a80"
            android:textSize="30px"/>

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@null"
            android:textColor="#1a1a1a"
            android:textSize="60px"
            android:layout_marginTop="60px"
            android:inputType="phone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/d9"
            android:layout_marginTop="20px"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_marginTop="10px"
        android:gravity="bottom">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:text=""
            android:background="@null"
            android:textColor="#1a1a1a"
            android:textSize="30px"
            android:layout_marginTop="30px"
            android:inputType="phone"
            android:hint="fill in code"/>
        
        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="1"/>
        
        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send code"
            android:background="@drawable/background_send_code"
            android:textColor="@color/white"
            android:textSize="30px"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="600px"
        android:layout_height="90px"
        android:background="@drawable/btn_complete_bg"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="32px"
        />
    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight="1"/>

</LinearLayout>
