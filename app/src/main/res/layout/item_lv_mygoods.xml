<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="15px"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView

            android:layout_marginTop="20px"
            android:layout_marginLeft="27px"
            android:id="@+id/tv_itemmygoods_bianhaotwo"
            android:text="编号：123456789"
            android:textSize="26px"
            android:textColor="@color/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="20px"
            android:layout_marginLeft="217px"
            android:id="@+id/tv_itemmygoods_bianhao"
            android:text="编号：123456789"
            android:textSize="26px"
            android:textColor="@color/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_itemmygoods_logo"
            android:layout_width="145px"
            android:layout_height="145px"
            android:layout_marginBottom="31px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:scaleType="fitXY"
            android:src="@drawable/bj_goods"
            app:layout_auto_baseheight="width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="20px"
            android:layout_marginTop="29px"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:layout_width="510px"
                android:layout_height="1px"
                android:layout_marginBottom="5px"
                android:layout_marginTop="5px"
                android:background="@color/f3" />

            <TextView
                android:id="@+id/tv_itemmygoods_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N-[3-氯-4-（3-氟苄氧基）苯基]-6-碘喹唑啉-4-胺"
                android:textColor="@color/a58"
                android:textSize="26px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33px">

                <TextView
                    android:id="@+id/tv_itemmygoods_nongdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="purity：99%"
                    android:textColor="@color/a1"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_itemmygoods_kucun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:text="stock：200桶"
                    android:textColor="@color/a1"
                    android:textSize="26px" />
            </LinearLayout>

            <TextView
                android:layout_width="510px"
                android:layout_height="1px"
                android:layout_marginBottom="5px"
                android:layout_marginTop="10px"
                android:background="@color/f3"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_itemmygoods_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【编辑】"
                    android:textColor="@color/ffc600"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_itemmygoods_xiajia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:text="【下架】"
                    android:textColor="@color/a1c81cf"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_itemmygoods_zhekouyouhui"
                    android:layout_width="127px"
                    android:layout_height="35px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/zhekouyouhui"
                    android:gravity="center"
                    android:text="折扣优惠"
                    android:textColor="@color/white"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_itemmygoods_xianshimiaosha"
                    android:layout_width="127px"
                    android:layout_height="35px"
                    android:layout_marginLeft="11px"
                    android:background="@drawable/xianshimiaosha"
                    android:gravity="center"
                    android:text="限时秒杀"
                    android:textColor="@color/white"
                    android:textSize="26px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
    android:background="@color/f2"
    android:layout_width="match_parent"
    android:layout_height="1px" />
<LinearLayout
    android:layout_marginTop="9px"
    android:layout_marginBottom="16px"
    android:paddingRight="32px"
    android:gravity="right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_itemmygoods_one"
        android:gravity="center"
        android:background="@drawable/mygoods_shangjia"
        android:text="上架"
        android:textSize="24px"
        android:textColor="@color/a4d4d4d"
        android:layout_width="140px"
        android:layout_height="50px" />
    <TextView
        android:id="@+id/tv_itemmygoods_two"
        android:layout_marginLeft="15px"
        android:gravity="center"
        android:background="@drawable/mygoods_shangjia"
        android:text="删除"
        android:textSize="24px"
        android:textColor="@color/a4d4d4d"
        android:layout_width="140px"
        android:layout_height="50px" />
</LinearLayout>

    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:layout_marginLeft="21px"
        android:textSize="24px"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="秒杀中"
        android:background="@drawable/miaoshazhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>