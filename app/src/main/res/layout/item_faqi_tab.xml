<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74px">
        <ImageView
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/line_grey"
            android:layout_width="match_parent"
            android:layout_height="6px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_myfaqibidding_zhengzaijingxing"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_myfaqibidding_zhengzaijingxing"
                    android:layout_centerInParent="true"
                    android:text="正在进行"
                    android:textSize="32px"
                    android:textColor="@color/b82db"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_myfaqibidding_zhengzaijingxingline"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/b82db"
                    android:layout_width="190px"
                    android:layout_height="6px" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_myfaqibidding_yiwancheng"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_myfaqibidding_yiwancheng"
                    android:layout_centerInParent="true"
                    android:text="已完成"
                    android:textSize="32px"
                    android:textColor="@color/be"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_myfaqibidding_yiwanchengline"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/be"
                    android:layout_width="190px"
                    android:layout_height="6px" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>