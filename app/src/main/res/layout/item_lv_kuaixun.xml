<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_itemkuaixun_logo"
        android:layout_marginLeft="28px"
        android:layout_marginBottom="28px"
        android:layout_marginTop="28px"
        android:scaleType="fitXY"
        android:layout_width="176px"
        android:layout_height="140px" />
<LinearLayout
    android:layout_marginLeft="26px"
    android:layout_marginRight="30px"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_itemkuaixun_title"
        android:lineSpacingExtra="6px"
        android:textSize="36px"
        android:textColor="#444444"
        android:text="国家检测部门严格规定，通过相关法规进行检测的产品"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"
            android:background="@color/fe1212"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:textColor="@color/white"
            android:textSize="26px"/>
        <TextView
            android:id="@+id/tv_itemkuaixun_yuedunum"
            android:textColor="#898989"
            android:textSize="26px"
            android:text="read 2464"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"/>
        <TextView
            android:id="@+id/tv_itemkuaixun_date"
            android:textColor="#898989"
            android:textSize="26px"
            android:layout_weight="1"
            android:text="2017-10-12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"/>

    </LinearLayout>
</LinearLayout>
</LinearLayout>