<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:paddingTop="28px"
        android:paddingLeft="20px"
        android:paddingBottom="28px"
        android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_store_img"
            android:layout_width="60px"
            android:layout_height="60px"/>
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="化浪自营旗舰店"
            android:textColor="@color/a33"
            android:textSize="26px"
            android:layout_marginLeft="10px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:paddingLeft="26px"
        android:paddingRight="38px"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="190px"
            android:layout_height="190px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190px"
            android:orientation="vertical"
            android:layout_marginLeft="30px">
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-叔丁基-4-甲基苯酚2-叔丁基-4-甲基苯酚2-叔丁基-4-甲基苯酚"
                android:textColor="@color/a1a1a1a"
                android:textSize="24px"
                android:layout_marginTop="10px"
                android:maxLines="2"
                android:ellipsize="end"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_product_params"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选：“90%”“红色”“贴体包装”"
                android:maxLines="1"
                android:textSize="24px"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_product_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥3000.00/桶"
                    android:textSize="26px"
                    android:textColor="@color/ef2f2e"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_product_unit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"
                    android:textColor="@color/a33"
                    android:textSize="26px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>