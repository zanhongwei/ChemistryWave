<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:background="@drawable/shape_heiquan"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_jjitem_ordnum"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_marginLeft="27px"
        android:gravity="center_vertical"
        android:text="订单编号："
        android:textColor="@color/textcolor"
        android:textSize="14sp"/>

    <View
        style="@style/lines"></View>

    <ListView
        android:id="@+id/lv_jignjiaitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/e6"
        android:dividerHeight="2px"></ListView>

    <View
        style="@style/lines"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jjitem_checkdetail"
            style="@style/buttonLookDetail"
            android:background="@drawable/shape_buttonred"
            android:text="查看详情"
            />

        <TextView
            android:id="@+id/tv_jjitem_onkeyjing"
            style="@style/buttonLookDetail"
            android:layout_marginLeft="53px"
            android:background="@drawable/shape_buttonblue"
            android:text="一键竞标"
            />
    </LinearLayout>
</LinearLayout>